@model LoginUser

<h1 class="tect-center">Login<h1>

<form asp-action="Login" asp-controller="Home" method="POST">
    <div class="form-group">
<span asp-validation-for="LoginEmail" class="text-danger font-weight-bold"></span>  
    <label class="form-label" asp-for="LoginEmail"></label>
    <input class="form-text mb-2" asp-for="LoginEmail">
    </div>
    <div class="form-group">
    <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
    <label class="form-label" asp-for="LoginPassword"></label>
    <input class="form-text mb-2" asp-for="LoginPassword">
    </div>
    <Button value="Login" type="submit">Login</Button>    
</form>